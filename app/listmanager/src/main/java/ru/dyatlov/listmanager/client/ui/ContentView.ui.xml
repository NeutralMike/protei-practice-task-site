<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel ui:field="contentView">
        <div class="col-1">
            <g:CheckBox ui:field="done"/>
        </div>
        <div class="col">
            <div class="row">
                <div class="col-1 preview">
                    <g:Image ui:field="preview" width="50px" height="50px"/>
                    <div class="row">
                        <g:Label ui:field="created"/>
                    </div>
                </div>
                <div class="col">
                    <div class="row title">
                        <g:Label ui:field="title"/>
                    </div>
                    <div class="row description">
                        <div class="col-10">
                            <div class="row">
                                <g:Image ui:field="authorLogo" width="15px" height="15px"/>
                                <g:Label ui:field="author"/>
                            </div>
                        </div>
                        <div class="col">
                            <g:Button ui:field="editButton" text="Edit"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>